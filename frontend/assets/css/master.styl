@import url(http://fonts.googleapis.com/css?family=Montserrat)
@import url(http://fonts.googleapis.com/css?family=Roboto:100);
$font-size-base ?= 18px
$font-family-monospace ?= "Courier New", monospace;
@import 'bootstrap/_bootstrap'
@import '_pace'

.hidden
  display: none

header
  h1
    color: white
    font-family: 'Montserrat', "Helvetica Neue", Helvetica, Arial, sans-serif

.text-center
  text-align: center

#signinButton
  margin-top: 100px
  margin: 0 auto
  display: block
  width: 112px

.panel, .panel-default > .panel-heading
  background: rgba(255, 255, 255, 0.5)
  border: none
  > .lead
    margin-bottom: 0px;

pre.lead
  font-size: 30px

.dashboard-menu
  .btn
    width: 25%

.maintenance
  .lead, h1
    font-family: 'Roboto', "Helvetica Neue", Helvetica, Arial, sans-serif
    margin: 0px
  
  h1.green
    color: $brand-success
  h1.red
    color: $brand-danger
  
  h1
    font-family: 'Roboto', "Helvetica Neue", Helvetica, Arial, sans-serif
    font-weight: 100
    font-size: 60px

.panel
  .panel-body + .panel-body
    padding-top: 0px

.parallax
  background-size: 100%
  height: 10em
  min-height: 10em
  display: table
  width: 100%
  margin-bottom: 20px
  
  > .lead
    font-family: 'Roboto', "Helvetica Neue", Helvetica, Arial, sans-serif
    display: table-cell
    text-align: center
    vertical-align: middle
    color: white
    font-size: 35px
    font-weight: 100
    text-shadow: black 2px 1px 2px

.videos
  .media
    cursor: pointer

.btn
  transition: background .3s linear